{
  "name": "offlinio",
  "version": "0.1.0",
  "description": "Offlinio - Universal Personal Media Downloader for Stremio (Platform-Agnostic Architecture with Mobile, Web, and TV Support)",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:performance": "jest --config jest.performance.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "start:launch": "npm run build && node dist/server.js --launch",
    "start:install": "npm run build && node dist/server.js --install",
    "start:dev": "tsx src/server.ts --dev",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "addon:validate": "curl -s http://127.0.0.1:11471/manifest.json | jq .",
    "addon:test-catalog": "curl -s http://127.0.0.1:11471/catalog/movie/offlinio-movies.json | jq .",
    "addon:test-stream": "curl -s http://127.0.0.1:11471/stream/movie/tt0111161.json | jq .",
    "prepare": "husky install"
  },
  "keywords": [
    "stremio",
    "addon", 
    "offline",
    "downloads",
    "real-debrid",
    "media",
    "personal-media-downloader",
    "mobile",
    "pwa",
    "android",
    "ios",
    "universal",
    "cross-platform",
    "android-tv",
    "companion-app"
  ],
  "author": "Offlinio Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@types/node-notifier": "^8.0.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "keytar": "^7.9.0",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.2",
    "node-notifier": "^10.0.1",
    "prisma": "^5.6.0",
    "stremio-addon-sdk": "^1.6.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.7",
    "@types/joi": "^17.2.3",
    "@types/keytar": "^4.4.0",
    "@types/mime-types": "^2.1.3",
    "@types/node": "^20.8.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.0.2",
    "playwright": "^1.55.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/offlinio.git"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
